# Auto detect text files and perform LF normalization
crlf=input  eol=lf
*        text=auto
 
*.py     text diff=php eol=lf
*.php    text diff=php eol=lf
*.html   text diff=html eol=lf
*.css    text eol=lf
*.js     text eol=lf
*.json   text eol=lf
*.twig   text eol=lf
*.yml    text eol=lf
*.sql    text eol=lf
*.sh     text eol=lf
*.md     text eol=lf
*.txt    text eol=lf
